{% extends 'base.html.twig' %}
{% block body %}
    {% include 'common/_header.html.twig' %}
    <div class="page page-home">
        <div class="container">
            <div class="home-cat-links">
                {% for header in headers %}
                    <a class="home-cat-link-item" href="{{ header.url }}">
                        <img src="{{ header.image }}" alt="">
                        <span class="icon-link">
                            <svg width="24" height="24" viewbox="0 0 24 24" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 17L17 7" stroke="#6162F2" stroke-width="2" stroke-linecap="round"
                                      stroke-linejoin="round"></path>
                                <path d="M7 7L17 7V17" stroke="#6162F2" stroke-width="2" stroke-linecap="round"
                                      stroke-linejoin="round"></path>
                            </svg>
                        </span>
                    </a>
                {% endfor %}
            </div>
            <h2>Лидеры продаж</h2>

            {% set path = path('filter', {limit:15}) %}
            <div class="product-items js-game-container"  data-path="{{ path }}" data-filter="{{ path }}"
                 data-page="1">
                {% include 'common/_all_games.html.twig' with {games:topGames} %}
            </div>
            <div class="btn-center-wrap js-show-more"><a class="btn btn-show-more">
                    <span>Показать еще</span>
                </a></div>
        </div>
        <div class="block-stats">
            <div class="container">
                <div class="stats-items">
                    <div class="stats-item">
                        <div class="left">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24"
                                 fill="none">
