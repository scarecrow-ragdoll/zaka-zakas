                            <span>{{ seller.statistics.cnt_bad_responses }}</span>
                        </div>
                    </div>
                </div>

                {% if games|first %}
                    <div class="reviews-items js-tab-container-resp"
                         data-path="{{ path('get-comments',{digiseller:games|first.gameId}) }}">
                    </div>
                {% endif %}
{#                <div class="btn-center-wrap"><a class="btn btn-show-more" href="#"> <span>Показать еще</span></a></div>#}
            </div>
        </div>
    </div>
    {% include 'common/_footer.html.twig' %}
