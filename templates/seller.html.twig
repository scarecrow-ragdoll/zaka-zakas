{% extends 'base.html.twig' %}
{% block title %}Товары продавца {{ seller.name }} на СТИМБАЙ{% endblock %}
{% block description %}Покупайте у продавца {{ seller.name }} на официальном сайте STEAMBUY COM!! Более {{ count }} товаров с гарантией!{% endblock %}
{% block body %}
    {% include 'common/_header.html.twig' %}
    <div class="page page-seller">
        <div class="instruction-header">
            <div class="instruction-header-bg">
                <picture>
                    <source media="(max-width: 500px)" srcset="/img/catalog-bg-mob.png">
                    <img src="/img/seller-bg.png" alt="">
                </picture>
            </div>
            <div class="container">
                <h1 class="title-wrap">Продавец:
                    <div class="name">{{ seller.name }}</div>
                </h1>
                <div class="seller-info-wrap">
                    <div class="saller-rating">
                        <div class="saller-rating-wrap">
                            <div class="saller-rating-items">
                                <div class="star-rating"><span style="width: {{ seller.rating }}%"></span></div>
                            </div>
                            <div class="rating-title">
                                <div class="percent">{{ seller.rating }}%</div>
                            </div>
                        </div>
                    </div>
                    <div class="start-of-cooperation">На сайте {{ seller.cuteDate }}</div>
                </div>
                <div class="mail">
                    {% if seller.email == 'скрыт продавцом' %}
                        <a>E-mail скрыт продавцом</a>
                    {% else %}
                        <a href="mailto:{{ seller.email }}">{{ seller.email }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="seller-info-wrap">
            <div class="container">
                <div class="seller-info">
                    <div class="reviews-stats">
                        <div class="reviews-stats-item">
